#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

#   "$basedir/node"  "$basedir/node_modules/now/dist/index.js" "$@"
#   ret=$?
# else 
if [ -x "$basedir/node" ]; then
  node  "$basedir/node_modules/now/dist/index.js" "$@"
  ret=$?
fi
exit $ret
